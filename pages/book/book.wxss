@font-face {
  font-family: Chalkboard;
  src: url('../../font/chalkboard.ttf'),
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
}

.logo {
  width: 224rpx;
  height: 224rpx;
  margin-top: 0 auto;
}

.name {
  margin-top: 12rpx;
  font-family: Chalkboard;
  font-size: 32rpx;
  color: #585858;
}

.input-container {
  margin-top: 32rpx;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: Chalkboard;
}

.input-search {
  margin: auto;
  text-align: center;
}

.button-search {
  margin: 32rpx;
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
}

.text-search {
  margin: auto;
  font-family: Chalkboard;
  font-size: 32rpx;
  color: #585858;
}